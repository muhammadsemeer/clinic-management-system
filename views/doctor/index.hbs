<section class="dr-page appointment ml-250">
  <div class="doctor-conatiner">
    <div class="tab">
      <button id="appointment" class="active"
        onclick="toogleTab3('#appointment', '#requsted' ,'#consulted','#cancel', '#appointment-conatiner', '#consulted-container', '#cancelled-conatiner','#requested-container','#exipred', '#exipred-container')">
        <i class="fas fa-calendar-check"></i>
        Appoitments
      </button>
      <button id="requsted"
        onclick="toogleTab3('#requsted','#consulted','#appointment', '#cancel', '#requested-container','#consulted-container', '#appointment-conatiner', '#cancelled-conatiner','#exipred', '#exipred-container')">
        <i class="fas fa-spinner"></i>
        My Requests
      </button>
      <button id="consulted"
        onclick="toogleTab3('#consulted','#appointment', '#requsted' ,'#cancel', '#consulted-container', '#requested-container','#appointment-conatiner', '#cancelled-conatiner','#exipred', '#exipred-container')">
        <i class="fas fa-clipboard-check"></i>
        Consulted
      </button>
      <button id="cancel"
        onclick="toogleTab3('#cancel','#consulted','#appointment', '#requsted', '#cancelled-conatiner','#requested-container','#consulted-container', '#appointment-conatiner','#exipred', '#exipred-container')">
        <i class="fas fa-calendar-times"></i>
        Cancelled
      </button>
      <button id="exipred"
        onclick="toogleTab3('#exipred','#consulted','#appointment', '#requsted', '#exipred-container', '#consulted-container', '#requested-container','#appointment-conatiner', '#cancelled-conatiner','#cancel')">
        <i class="fas fa-history"></i>
        Expired
      </button>
      <hr />
    </div>
  </div>
  <div class="card active" id="appointment-conatiner">
    {{#if appointments}}
    {{#each appointments}}
    <div class="container" id="{{this._id}}">
      <div>
        <img src="/images/doctor/{{this.doctor._id}}.jpg" alt="{{this.doctor.name}}" />
      </div>
      <div>
        <h3>
          {{this.doctor.name}}
        </h3>
        <p>
          {{this.doctor.field}}
        </p>
      </div>
    </div>
    <div class="content">
      <p>
        {{this.date}}
      </p>
      <p>
        {{this.timeslot}}
      </p>
      <p>
        {{this.status}}
      </p>
      <div class="btn-grp" style="margin-left: 0; font-size: 16px">
        <a href="#">
          <button class="crop" style="font-size: 15px" onclick="modalup('message-modal','{{this._id}}')">
            Cancel Apointment
          </button>
        </a>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  <div class="container">
    <h1>
      No Appointments
    </h1>
  </div>
  {{/if}}
  </div>
  <div class="doctor-conatiner">
    <div class="card" id="requested-container">
      {{#if requests}}
      {{#each requests}}
      <div class="container" id="{{this._id}}">
        <div>
          <img src="/images/doctor/{{this.doctor._id}}.jpg" alt="{{this.doctor.name}}" />
