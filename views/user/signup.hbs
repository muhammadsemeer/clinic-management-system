<section class="admin-login" style="margin-top: 50px;">
  <div class="img-section">
    <img src="/images/icons/undraw_secure_login_pdn4.svg" alt="" />
  </div>
  <div class="login-container">
    <h1>
      Create an Account
    </h1>
    <form action="/login" method="POST">
      <h3 class="error">
        {{error}}
      </h3>
      <div class="input-section">
        <input type="text" name="name" id="name" required />
        <label for="name">
          Name
        </label>
      </div>
      <div class="input-section">
        <input
          type="email"
          name="email"
          id="email"
          value="{{email}}"
          required
        />
        <label for="email">
          Email
        </label>
      </div>
      <div class="input-section">
        <input
          type="text"
          pattern="[0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9]"
          name="contactno"
          id="contactno"
          required
        />
        <label for="contactno">
          Contact No
        </label>
      </div>
      <div class="input-section">
        <input
          type="password"
          name="password"
          id="password"
          value="{{password}}"
          required
        />
        <label for="password">
          Password
        </label>
        <div class="icon">
          <i class="far fa-eye-slash"></i>
          <i class="far fa-eye"></i>
        </div>
      </div>
      <div class="radio-section">
        <div>
          <input type="radio" name="gender" value="Male" id="male" />
          <label for="male">
            <img src="/images/icons/undraw_male_avatar_323b.svg" alt="" />
            <span>
              Male
            </span>
          </label>
        </div>
        <div>
          <input type="radio" name="gender" value="Female" id="female" />
          <label for="female">
            <img src="/images/icons/undraw_female_avatar_w3jk.svg" alt="" />
            <span>
              Female
            </span>
          </label>
        </div>
      </div>
      <div class="input-section">
        <input type="submit" value="Login" />
      </div>
    </form>
  </div>
</section>