<section class="home user" id="#">
  <div class="hero">
    <aside>
      <h1>
        Welcome To Galaxieon Care
      </h1>
      <p>
        Get your personal health care companion here
      </p>
      <div class="btn-grp" style="margin-left: 0;">
        <a href="#doctors">
          <button class="crop">
            Find Your Doctor
          </button>
        </a>
      </div>
    </aside>
  </div>
  <div class="search" style="display: flex; justify-content:flex-end; padding-top: 30px">
    <div class="dr-search">
      <div class="btn-grp">
        <input type="text" name="q" class="first" id="search" value="{{query}}" placeholder="Search....">
        <button type="submit" class="last" id="search-btn"><i class="fas fa-search"></i></button>
      </div>
    </div>
  </div>
  <div class="card" id="doctors">
    {{#each doctor}}
    <div class="container">
      <div class="img-section">
        {{#isImage this._id "doctor"}}
        <img src="/images/doctor/{{this._id}}.jpg" alt="" />
        {{else}}
        <img src="/images/icons/undraw_male_avatar_323b.svg">
        {{/isImage}}
      </div>
      <div class="content">
        <p>
          {{this.name}}
        </p>
        <p>
          {{this.field}}
        </p>
        <p>
          {{this.specialised}}
        </p>
        <div class="btn-grp" style="margin-left: 0; font-size: 16px">
          <a href="/book-appoinment/{{this._id}}">
            <button class="crop" style="font-size: 15px">
              Book Apointment
            </button>
          </a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>
