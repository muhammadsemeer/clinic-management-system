<section class="user doctors">
    <div class="head">
       <h1> My Doctors</h1>
    </div>
    <div class="user-container">
        <div id="doctor-conatiner" class="container active">
            <div class="doctors-display" style="padding: 10px;">
                <table>
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Specialised
                            </th>
                            <th>
                                Field
                            </th>
                            <th>
                                Last Appointment
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each doctors}}
                        <tr id="{{this._id}}">
                            <td>
                                {{this.name}}
                            </td>
                            <td>
                                {{this.specialised}}
                            </td>
                            <td>
                                {{this.field}}
                            </td>
                            <td>
                                {{this.last.date}} <br> {{this.last.timeslot}}
                            </td>
                            <td>
                                <a class="edit tooltip" href="/history/{{this._id}}">
                                    <i class="fas fa-calendar"></i>
                                    <span class="tooltip-text">History</span>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>