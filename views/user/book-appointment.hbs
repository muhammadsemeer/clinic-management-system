<section class="user book-appointment">
  <div class="container">
    <div class="doctor-sec">
      <div class="img-sec">
        <img src="/images/doctor/{{doctor._id}}.jpg" alt="" />
      </div>
      <div class="content-sec">
        <p>
          {{doctor.name}}
        </p>
        <p>
          {{doctor.field}}
        </p>
        <p>
          {{doctor.specialised}}
        </p>
      </div>
    </div>
    <div class="book-sec">
      <div class="head" style="padding: 0; text-align: center">
        <h1>
          Select Your Date and Time
        </h1>
      </div>
      <div class="dates">
        <div class="radio-section">
          <div>
            <input type="radio" name="date" id="1" />
            <label for="1" style="width: 200px;">
              <span>
                Wednesday<br>9 Dec 2020
              </span>
            </label>
          </div>
          <div>
            <input type="radio" name="date" id="2" />
            <label for="2" style="width: 200px;">
              <span>
                Wednesday<br>9 Dec 2020
              </span>
            </label>
          </div>
          <div>
            <input type="radio" name="date" id="3" />
            <label for="3" style="width: 200px;">
              <span>
                Wednesday<br>9 Dec 2020
              </span>
            </label>
          </div>
        </div>
      </div>
      <div class="sessions">
        <div class="radio-section">
          <div>
            <input type="radio" name="date" id="1" />
            <label for="1" style="width: 200px;">
              <span>
                Morning<br>9:30 am to 12:00 pm
              </span>
            </label>
          </div>
          <div>
            <input type="radio" name="date" id="2" />
            <label for="2" style="width: 200px;">
              <span>
                After-noon<br>1:00 pm to 4:00 pm
              </span>
            </label>
          </div>
          <div>
            <input type="radio" name="date" id="3" />
            <label for="3" style="width: 200px;">
              <span>
                Evening<br>4.30 to 6:00 pm
              </span>
            </label>
          </div>
        </div>
      </div>
      <div class="time">
        <div class="radio-section">
          <div>
            <input type="radio" name="date" id="1" />
            <label for="1" style="width: 200px;">
              <span>
                9.30 -10:30
              </span>
            </label>
          </div>
          <div>
            <input type="radio" name="date" id="2" />
            <label for="2" style="width: 200px;">
              <span>
                9.30 -10:30
              </span>
            </label>
          </div>
          <div>
            <input type="radio" name="date" id="3" />
            <label for="3" style="width: 200px;">
              <span>
                9.30 -10:30
              </span>
            </label>
          </div>
        </div>
      </div>
      <div class="btn-grp" style="display: flex; justify-content: center">
        <button class="crop">
          Book Appointment
        </button>
      </div>
    </div>
  </div>
</section>